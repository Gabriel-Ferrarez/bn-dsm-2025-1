generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Categoria {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  descricao   String
  produtos    Produto[] // relação inversa opcional, se quiser
}

model Fornecedor {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  razao_social  String
  nome_fantasia String?
  cnpj          String    @unique
  email         String    @unique
  logradouro    String
  num_casa      String
  complemento   String?
  bairro        String
  municipio     String
  uf            String
  cep           String
  celular       String
  produtos      Produto[]
}


model Produto {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  marca           String
  detalhes        String?
  quantidade      Float
  unidade_medida  String
  preco_unitario  Float
  qtd_estoque     Float?
  categoria_id    String      @db.ObjectId
  categoria       Categoria   @relation(fields: [categoria_id], references: [id])
  fornecedor_id   String      @db.ObjectId
  fornecedor      Fornecedor  @relation(fields: [fornecedor_id], references: [id])
}

model Cliente {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  nome              String
  cpf               String      @unique   // Não pode repetir no cadastro
  data_nascimento   DateTime?
  email             String      @unique
  logradouro        String
  num_casa          String
  complemento       String?
  bairro            String
  municipio         String
  uf                String
  cep               String
  celular           String
}